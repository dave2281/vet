<% if alert %>
  <div class="alert alert-danger"><%= alert %></div>
<% end %>
<div class="container-md mt-lg-4">
  <div class="card">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col fs-2"><%= @question.title %></div>
          <% user = @users.find_by(id: @question.user_id) %>
          <%= link_to "#{user.name + ' ' + user.surname}", user_path(user.id), class: 'col text-end' %>
          <p class="mt-4"><%= @question.text %></p>
        </div>
      </div>
      <div class="container-md">
        <% if current_user.id == @question.user_id %>
          <div class="row">
            <div class="col text-md-start">
              <%= button_to "Edit", edit_question_path(@question), class: 'col btn btn-success' %>
            </div>
            <div class="col text-md-end">
              <%= button_to "Delete", @question, method: :delete, class: 'col btn btn-danger'%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <% @comments.each do |comment| %>
    <% if comment && comment.question_id == @question.id %>
      <div class="card">
        <div class="card-body">
          <div class="container">
            <div class="row">
              <div class="col my-1 mb-3"><%= comment.text %></div>
              <% user = @users.find_by(id: comment.user_id) %>
              <%= link_to "#{user.name + ' ' + user.surname}", user_path(user.id), class: 'col text-end' %>
            </div>
            <p class="font-monospace"><%= comment.created_at.strftime("%H:%M %d-%m-%Y") %></p>
          </div>
          <div class="container-md">
            <div class="row">
              <div class="col text-md-start">
                <%= button_to "Edit", edit_comment_path(comment), class: 'btn btn-success'%>
              </div>
              <div class="col text-md-end">
                <%= button_to "Destroy", @question, method: :delete, class: 'btn btn-danger' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

